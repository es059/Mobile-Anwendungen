<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@drawable/actionbar_orange"
    android:gravity="left"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/Previous"
        style="?android:attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:src="@drawable/ic_action_navigation_previous_item" />

    <RelativeLayout
        android:id="@+id/workoutplan_Information"
        android:layout_width="20dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center" >

        <TextView
	        android:id="@+id/workoutplanPicker"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="@string/noWorkoutplan"
	        android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
	        android:gravity="center_horizontal"
	        android:text=""
	        android:textColor="@android:color/primary_text_dark"
	        android:textStyle="bold" />

        <TextView
            android:id="@+id/workoutplanPickerDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workoutplanPicker"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
           	android:gravity="center_horizontal"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="10sp"
            android:textStyle="bold" />
 
    </RelativeLayout>
    <ImageButton
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        style="?android:attr/actionButtonStyle"
      	android:layout_weight="1"
      	android:layout_gravity="bottom|right"
        android:layout_height="match_parent"
        android:src="@drawable/ic_action_navigation_next_item" />

</LinearLayout>
