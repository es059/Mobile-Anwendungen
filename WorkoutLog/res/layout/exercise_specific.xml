<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.workout.log.ExerciseSpecific"
    tools:ignore="MergeRootFrame" >

    <FrameLayout
        android:id="@+id/specific_dateTimePicker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    
    <!-- Used for the Undo TextField  -->
    <LinearLayout
        android:id="@+id/undobar"
        style="@style/UndoBar"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/undobar_message"
            style="@style/UndoBarMessage" ></TextView>
        <Button
            android:id="@+id/undobar_button"
            style="@style/UndoBarButton" ></Button>
    </LinearLayout>

    <!-- First Row of the Table containing the headlines -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_below="@+id/specific_dateTimePicker"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:background="#303030"
			android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:textColor="#FFFFFF"
        		android:gravity="center"
        		style="?android:attr/listSeparatorTextViewStyle"
        		android:textStyle="bold"
	            android:layout_weight="1"
	            android:text="@+string/specific_set"/>
	        
	        <TextView
	            android:id="@+id/textView3"
	            style="?android:attr/listSeparatorTextViewStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:gravity="center"
	            android:layout_weight="1"
	            android:text="@+string/specific_weight"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold" />
	
	    	<TextView
	    	    android:id="@+id/textView2"
	    	    style="?android:attr/listSeparatorTextViewStyle"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="center_horizontal"
	    	    android:gravity="center"
	    	    android:layout_weight="1"
	    	    android:text="@+string/specific_repetition"
	    	    android:textColor="#FFFFFF"
	    	    android:textStyle="bold" />

        </TableRow>
    </TableLayout>
    
    <ListView
        android:id="@+id/exerciseSpecificList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/specific_timer"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:longClickable="true" />
    
    <FrameLayout
        android:id="@+id/specific_timer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
