<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.workout.log.ExerciseOverview"
    tools:ignore="MergeRootFrame" >

    <fragment
        android:id="@+id/trainingDay_fragment"
        android:name="com.workout.log.fragment.ActionBarTrainingDaySubjectFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/actionbar_training_day_subject_fragment"/>

    <ListView
        android:id="@+id/trainingDay_add_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainingDay_fragment"
        android:layout_centerHorizontal="true"
        android:longClickable="true" >
    </ListView>
    
 </RelativeLayout>
