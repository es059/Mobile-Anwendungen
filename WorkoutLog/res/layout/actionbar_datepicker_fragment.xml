<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_datepicker_fragment"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@drawable/actionbar_orange"
    android:gravity="left"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/Previous"
        style="?android:attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:src="@drawable/ic_action_navigation_previous_item" />

    <RelativeLayout
     android:id="@+id/specific_Information"
     android:layout_width="20dp"
     android:layout_height="fill_parent"
     android:layout_weight="3"
     android:gravity="center">
    
		<TextView
		    android:id="@+id/date"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerInParent="true"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:hint="@string/ActionBar_Date"
		    android:paddingLeft="5dp"
		    android:text=""
		    android:textColor="@android:color/primary_text_dark"
		    android:textStyle="bold" />

		<LinearLayout 
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:layout_centerInParent="true"
	       android:layout_centerHorizontal="true"
		   android:layout_below="@+id/date" 
		   android:gravity="center" >
		   
	      	<TextView
		        android:id="@+id/Set"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		       	android:gravity="center_horizontal"
		        android:hint="@string/Set"
		        android:textColor="@android:color/primary_text_dark"
		        android:textSize="12sp"
		        android:textStyle="bold" />
	      
	      	<View
	   	 		android:id="@+id/divider"
	    		android:layout_width="2dip"
	    		android:layout_marginRight="3dp"
	    		android:layout_marginLeft="3dp"
	    		android:layout_height="11dip"
	    		android:background="#707070"/>
	      
	      	<TextView
		        android:id="@+id/Rep"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		       	android:gravity="center_horizontal"
		        android:hint="@string/Rep"
		        android:textColor="@android:color/primary_text_dark"
		        android:textSize="12sp"
		        android:textStyle="bold" />
    	</LinearLayout>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        style="?android:attr/actionButtonStyle"
      	android:layout_weight="1"
      	android:layout_gravity="bottom|right"
        android:layout_height="match_parent"
        android:src="@drawable/ic_action_navigation_next_item" />

</LinearLayout>
